<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:showIn="@layout/app_bar_main"
	android:background="@drawable/home">

	<androidx.cardview.widget.CardView
		android:layout_width="320dp"
		android:layout_height="130dp"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="80dp"
		app:cardCornerRadius="20dp"
		app:cardBackgroundColor="#FBF5FF"
		android:minWidth="25px"
		android:minHeight="25px"
		android:id="@+id/cardView1"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/relativeLayout1">
				<TextView
					android:layout_width="80dp"
					android:layout_height="wrap_content"
					android:text="Start Learning New Stuff"
					android:textColor="#80608B"
					android:layout_margin="40dp"
					android:includeFontPadding="true"
					android:textFontWeight="700"
					android:id="@+id/textView1" 
			 />
				<ImageView
					android:layout_width="100dp"
					android:layout_height="191dp"
					app:srcCompat="@drawable/man_sleep"
					android:layout_toRightOf="@+id/textView1"
			
			/>
			</RelativeLayout>
			<com.google.android.material.button.MaterialButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
	<androidx.cardview.widget.CardView
		android:layout_width="320dp"
		android:layout_height="80dp"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="40dp"
		android:layout_below="@+id/cardView1"
		android:id="@+id/cardView2"
		app:cardBackgroundColor="#F2CB90"
		app:cardCornerRadius="20dp"/>
	<GridLayout
		android:layout_marginTop="20dp"
		android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/cardView2">
		<androidx.cardview.widget.CardView
            android:layout_width="150dp"
			android:layout_margin="10dp"
            android:layout_height="150dp"
			app:cardCornerRadius="20dp"
			android:layout_column="0"
			android:layout_row="0"
			
			app:cardBackgroundColor="#80608B">
			<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
				<androidx.appcompat.widget.AppCompatTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="18dp"
					android:textColor="@android:color/white"
					android:text="Indian Polity"
					android:layout_marginLeft="20dp"
					android:layout_marginTop="15dp"
					android:id="@+id/appCompatTextView1"
					/>
				<androidx.appcompat.widget.AppCompatTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="12dp"
					android:textColor="@android:color/white"
					android:layout_below="@+id/appCompatTextView1"
					android:id="@+id/appCompatTextView2"
					android:text="128 chapters"
					android:layout_marginLeft="20dp"
					
					/>
				<androidx.appcompat.widget.AppCompatSeekBar
					android:layout_width="180dp"
					android:layout_height="wrap_content"
					android:layout_below="@+id/appCompatTextView2"
					android:layout_marginLeft="4dp"
					android:splitTrack="false"
					android:scrollIndicators="none"
					android:screenReaderFocusable="true"
					android:progress="40"
					android:progressTint="#F2CB90"
					android:layout_marginTop="5dp"
					
					
					/>
				
			
			</RelativeLayout>
			</androidx.cardview.widget.CardView>
		<androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
			android:layout_margin="10dp"
			android:layout_column="1"
			android:layout_row="0"
			app:cardBackgroundColor="#FFE2D6"
			app:cardCornerRadius="20dp"/>
		<androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
			android:layout_margin="10dp"
			android:layout_column="0"
			android:layout_row="1"
			app:cardBackgroundColor="#FFE2D6"
			app:cardCornerRadius="20dp"/>
		<androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
			android:layout_margin="10dp"
			android:layout_column="1"
			app:cardCornerRadius="20dp"
			android:layout_row="1"
			app:cardBackgroundColor="#80608B"/>
    </GridLayout>
</RelativeLayout>

